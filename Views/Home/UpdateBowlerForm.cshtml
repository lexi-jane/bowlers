@model Bowler

<form method="POST" action="/Home/UpdateBowler">
    <input type="hidden" name="BowlerID" value="@Model.BowlerID"  />
    <div class="mb-2">
        <label name="BowlerFirstName" class="form-label">First Name</label>
        <input type="text" class="form-control" name="BowlerFirstName" value="@Model.BowlerFirstName">
    </div>
    <div class="mb-2">
        <label name="BowlerMiddleInit" class="form-label">Middle Initial</label>
        <input type="text" class="form-control" name="BowlerMiddleInit" value="@Model.BowlerMiddleInit">
    </div>
    <div class="mb-2">
        <label name="BowlerLastName" class="form-label">Last Name</label>
        <input type="text" class="form-control" name="BowlerLastName" value="@Model.BowlerLastName">
    </div>
    <div class="mb-2">
        <label name="BowlerAddress" class="form-label">Address</label>
        <input type="text" class="form-control" name="BowlerAddress" value="@Model.BowlerAddress">
    </div>
    <div class="mb-2">
        <label name="BowlerCity" class="form-label">City</label>
        <input type="text" class="form-control" name="BowlerCity" value="@Model.BowlerCity">
    </div>
    <div class="mb-2">
        <label name="BowlerState" class="form-label">State</label>
        <input type="text" class="form-control" name="BowlerState" value="@Model.BowlerState">
    </div>
    <div class="mb-2">
        <label name="BowlerZip" class="form-label">Zip</label>
        <input type="text" class="form-control" name="BowlerZip" value="@Model.BowlerZip">
    </div>
    <div class="mb-2">
        <label name="BowlerPhoneNumber" class="form-label">Phone</label>
        <input type="text" class="form-control" name="BowlerPhoneNumber" value="@Model.BowlerPhoneNumber">
    </div>
    <div class="mb-2">
        <label name="TeamID" class="form-label">Team</label>
        <select type="text" class="form-control" name="TeamID" value="@Model.TeamID">
            @foreach (Team team in ViewBag.Teams)
            {
                <option value="@team.TeamID">@team.TeamName</option>
            }
        </select>
    </div>
    <div class="mb-2">
        <button type="submit" class="btn btn-success">Submit</button>
    </div>
</form> 